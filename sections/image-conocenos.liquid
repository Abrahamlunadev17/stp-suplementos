<div class="historia-section-v2">
  {% if section.settings.image_desktop %}
    {{ section.settings.image_desktop
 | image_url: width: 2200
 | image_tag:
 loading: 'eager',
 class: 'hero-media-v2',
 widths: '1200,1600,1900,2200' }}
  {% endif %}

  <div class="historia-content-v2">
    {% if section.settings.title != blank %}
      <h2 class="historia-title-v2">{{ section.settings.title }}</h2>
    {% endif %}

    {% if section.settings.text != blank %}
      <p class="historia-text-v2">{{ section.settings.text }}</p>
    {% endif %}

    <div class="historia-cards-v2">
      {% for block in section.blocks %}
        <div class="historia-card-v2">
          {% if block.settings.card_title != blank %}
            <p class="card-title-v2">{{ block.settings.card_title }}</p>
          {% endif %}
          {% if block.settings.card_text != blank %}
            <p class="card-text-v2">{{ block.settings.card_text }}</p>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>
<style>
  .historia-section-v2 {
    color: white;
    padding: 40px 20px;
    text-align: center;
    max-width: 1200px;
    margin: 0 auto;
  }

  .hero-media-v2 {
    width: 100%;
    height:500px;
    object-fit:cover;
    border-radius: 8px;
    margin-bottom: 30px;
    border: 1px solid white;
  }

  .historia-title-v2 {
    font-size: 22px;
    font-weight: bold;
    text-transform: uppercase;
    margin-bottom: 10px;
  }

  .historia-text-v2 {
    font-size: 16px;
    line-height: 1.6;
  }

  .historia-content-v2 {
    text-align: left;
    padding-bottom: 32px;
  }

  .historia-cards-v2 {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: center;
  }

  .historia-card-v2 {
    background: #CF2928;
    padding: 40px;
    border-radius: 12px;
    margin-top: 54px;
    flex: 1 1 300px;
    color: white;
    text-align: left;
  }

  .card-title-v2 {
    font-weight: bold;
    font-size: 24px;
    text-transform: uppercase;
    margin-bottom: 10px;
  }

  .card-text-v2 {
    font-size: 14px;
    line-height: 1.5;
  }

  @media screen and (max-width: 749px) {
    .historia-text-v2 {
      font-size: 15px;
    }

    .historia-cards-v2 {
      flex-direction: column;
      align-items: center;
      margin-top: 54px;
    }

    .historia-card-v2 {
      width: 100%;
      margin: 0;
      padding: 54px 20px;
    }

    img.hero-media-v2 {
width: 100%;
    border-radius: 8px;
    margin-bottom: 30px;
    border: 1px solid white;
    height: 500px;
    object-fit: cover;
    }
  }
</style>


{% schema %}
  {
    "name": "Nuestra Historia",
    "settings": [
      {
        "type": "image_picker",
        "id": "image_desktop",
        "label": "Imagen principal"
      }, {
        "type": "text",
        "id": "title",
        "label": "Título",
        "default": "NUESTRA HISTORIA"
      }, {
        "type": "textarea",
        "id": "text",
        "label": "Texto",
        "default": "Texto de ejemplo para la historia de la empresa."
      }
    ],
    "blocks": [
      {
        "type": "card",
        "name": "Tarjeta",
        "settings": [
          {
            "type": "text",
            "id": "card_title",
            "label": "Título de la tarjeta",
            "default": "MISIÓN"
          }, {
            "type": "textarea",
            "id": "card_text",
            "label": "Texto de la tarjeta",
            "default": "Texto de misión o visión aquí."
          }
        ]
      }
    ],
    "max_blocks": 2,
    "presets": [
      {
        "name": "Nuestra Historia",
        "category": "Texto e imagen",
        "blocks": [
          {
            "type": "card"
          }, {
            "type": "card"
          }
        ]
      }
    ]
  }
{% endschema %}