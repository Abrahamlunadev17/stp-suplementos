<div class="bienestar-section-{{ section.id }}" style="background: {{ section.settings.bg }}">
  <h2 class="bienestar-title">{{ section.settings.heading }}</h2>

  <div class="w-page-width">
    <div class="swiper bienestar-swiper-{{ section.id }}">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="swiper-slide bienestar-card-wrapper">


            <div class="bienestar-card__image">
              {{ block.settings.image | image_url: width: 600 | image_tag: loading: 'lazy' }}
            </div>
            <div class="bienestar-card">

              <h3 class="bienestar-card__text">{{ block.settings.text }}</h3>
              <p>{{ block.settings.especialidad }}</p>
              <div class="divider-white-line"></div>
              <p>{{ block.settings.subtitulo }}</p>
            </div>
          </div>
        {% endfor %}
      </div>
      <div class="swiper-pagination swiper-pagination-{{ section.id }}"></div>
    </div>
  </div>

</div>

<style>
  .w-page-width {
    max-width: 1200px;
    margin: 0 auto;
  }

  .divider-white-line {
    width: 100%;
    height: 1px;
    background-color: #EF743D;
    margin: 10px 0;
  }


  .bienestar-section-{{ section.id }} {
    padding: 40px 20px;
    text-align: center;
    color: white;
    background: {{ section.settings.bg }};
  }

  .bienestar-title {
    font-size: 26px;
    font-weight: 600;
    margin-bottom: 32px;
  }

  .bienestar-swiper-{{ section.id }}
  .swiper-slide {
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-bottom: 48px;
  }

  .bienestar-card {
    background: rgb(255, 255, 255);
    border-radius: 16px;
    padding: 60px 20px 20px;
    text-align: left;
    min-height: 220px;
    width: 100%;
    max-width: 300px;
    margin: 70px auto 0;
    color: black;
  }

  .bienestar-card p {
    text-align: left !important;
    width: 100%;
    color: black;
    margin: 0 0 12px;
  }
  .bienestar-card__image {
    margin: 0 auto -50px;
    width: 120px;
    position: absolute;
    height: 120px;
    border-radius: 50%;
    background: white;
    padding: 2px;
    overflow: hidden;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
  }

  .bienestar-card__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 50%;
  }

  .bienestar-card__text {
    font-size: 14px;
    line-height: 1.5;
    margin: 0 auto;
    text-align: left;
  }

  /* Botón opcional (si lo usas) */
  .bienestar-button {
    margin-top: 16px;
    background: linear-gradient(to right, #EF743D, #F1783D);
    color: white;
    font-weight: bold;
    padding: 12px 128px;
    border-radius: 30px;
    display: inline-block;
    text-decoration: none;
  }

  .swiper-pagination-{{ section.id }} {
    margin-top: 16px;
    text-align: center;
  }

  .swiper-pagination-{{ section.id }}
  .swiper-pagination-bullet {
    background: white;
    opacity: 0.4;
  }

  .swiper-pagination-{{ section.id }}
  .swiper-pagination-bullet-active {
    opacity: 1;
  }


  /* Desktop: grid view */
  @media (min-width: 750px) {


    .bienestar-card__image {
      width: 124px;
      height: 124px;
    }

    .bienestar-card__text {
      font-size: 18px !important;
      line-height: 1.5;
      max-width: 220px;
      margin: 0 auto;
      /* <-- agregado valor */
    }

    h3.bienestar-card__text {
      margin: 0;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    new Swiper(".bienestar-swiper-{{ section.id }}", {
      slidesPerView: 1,
      spaceBetween: 6,
      loop: false,
      pagination: {
        el: ".swiper-pagination-{{ section.id }}",
        clickable: true
      },
      breakpoints: {
        750: {
          slidesPerView: 4,
          spaceBetween: 32
        }
      }
    });
  });
</script>

