<h3 class="text-center">
  NUESTROS PRODUCTOS
</h3>

<div class="stp-grid-products-section">
  <div class="stp-grid-products-grid">
    {% for block in section.blocks %}
      <a href="{{ block.settings.link }}" class="stp-grid-product-wrapper {% if block.settings.full_width %}full-width{% endif %}">
        <div class="stp-grid-product-card">
          {% if block.settings.image_mobile != blank or block.settings.image_desktop != blank %}
       
              {% if block.settings.image_mobile != blank %}
                <img src="{{ block.settings.image_mobile | img_url: 'master' }}" alt="{{ block.settings.title | escape }}" class="img-mobile--">
              {% endif %}
              {% if block.settings.image_desktop != blank %}
                <img src="{{ block.settings.image_desktop | img_url: 'master' }}" alt="{{ block.settings.title | escape }}" class="img-desktop--">
              {% endif %}
            
          {% endif %}
          <div class="wrapper-text-card-stp">
            <span>{{ block.settings.title }}</span>
          </div>
        </div>
      </a>
    {% endfor %}
  </div>
</div>

<style>
.text-center {
  text-align: center;
}

/* Section */
.stp-grid-products-section {
  max-width: 1400px;
  margin: 0 auto;
  padding: 20px 16px;
}

/* Grid */
.stp-grid-products-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  grid-gap: 16px;
  position: relative;
}

/* Common link wrapper */
.stp-grid-product-wrapper {
  display: block;
  text-decoration: none;
  color: inherit;
}

/* Product card */


/* Image */
.stp-grid-product-card img {
  width: 100%;
  object-fit: cover;
  z-index: 2;
  border-radius:12px;
}

.img-mobile-- {
  display: block;
}

.img-desktop-- {
  display: none;
}

/* Text */
.wrapper-text-card-stp {
  text-align: center;
}

.stp-grid-product-card span {
  color: #fff;
  font-weight: bold;
  font-size: 1rem;
  z-index: 2;
  text-shadow: 1px 1px 4px #b71c1c;
}

/* Desktop */
@media (min-width: 749px) {
  .stp-grid-products-grid {
    grid-template-columns: repeat(3, 1fr);
    grid-gap: 24px;
  }

  .stp-grid-product-card {
    flex-direction: row;
    gap: 16px;
    min-height: 180px;
  }

  .stp-grid-product-card img {
    width: 100%;
    border-radius:12px;
    height
  }

  .wrapper-text-card-stp {
    flex: 1;
    text-align: left;
    display: flex;
    align-items: center;
    padding-left: 10px;
  }

  .stp-grid-product-card span {
    font-size: 1.2rem;
  }

  .img-mobile-- {
    display: none;
  }

  .img-desktop-- {
    display: block;
  }
}
</style>

{% schema %}
{
  "name": "Grid de Productos",
  "settings": [],
  "blocks": [
    {
      "type": "card",
      "name": "Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "image_mobile",
          "label": "Imagen Mobile"
        },
        {
          "type": "image_picker",
          "id": "image_desktop",
          "label": "Imagen Desktop"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Título"
        },
        {
          "type": "checkbox",
          "id": "full_width",
          "label": "¿Card de ancho completo?",
          "default": false
        }
      ]
    }
  ],
  "max_blocks": 7,
  "presets": [
    {
      "name": "Grid de Productos",
      "blocks": [
        {
          "type": "card",
          "settings": {
            "title": "PROTEÍNAS",
            "full_width": true
          }
        },
        {
          "type": "card",
          "settings": {
            "title": "CREATINAS"
          }
        },
        {
          "type": "card",
          "settings": {
            "title": "ENERGÉTICOS Y PRE-ENTRENOS"
          }
        },
        {
          "type": "card",
          "settings": {
            "title": "VASODILATADORES"
          }
        },
        {
          "type": "card",
          "settings": {
            "title": "AMINOÁCIDOS Y RECUPERACIÓN"
          }
        },
        {
          "type": "card",
          "settings": {
            "title": "QUEMA GRASA Y METABOLISMO",
            "full_width": true
          }
        }
      ]
    }
  ]
}
{% endschema %}
