<h3 class="text-center">
  NUESTROS PRODUCTOS
</h3>

<div class="stp-grid-products-section">
  <div class="stp-grid-products-grid">
    {% for block in section.blocks %}
      <a href="{{ block.settings.link }}" class="stp-grid-product-wrapper {% if block.settings.full_width %}full-width{% endif %}">
        <div class="stp-grid-product-card" style="background-image: url({{ block.settings['image-bg'] | img_url: 'large' }}); background-color: #e53935;
        background-position: center center;
        background-repeat: no-repeat;
        background-size: cover;">
          {% if block.settings.image != blank %}
            <div class="image-container-stp">
              <img src="{{ block.settings.image | img_url: 'medium' }}" alt="{{ block.settings.title | escape }}">
            </div>
          {% endif %}
          <div class="wrapper-text-card-stp">
            <span>{{ block.settings.title }}</span>
          </div>
        </div>
      </a>
    {% endfor %}
  </div>
</div>


<style>.text-center {
  text-align: center;
}

/* Section */
.stp-grid-products-section {
  max-width: 1400px;
  margin: 0 auto;
  padding: 20px 16px;
}

/* Grid */
.stp-grid-products-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  grid-gap: 16px;
  position: relative;
}



/* Common link wrapper */
.stp-grid-product-wrapper {
  display: block;
  text-decoration: none;
  color: inherit;
}

/* Product card */
.stp-grid-product-card {
  background: #e53935;
  border-radius: 10px;
  padding: 18px 16px 16px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
  height: 100%;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.12);
  min-height: 180px;
}

/* Image */
.stp-grid-product-card img {
  width: 100%;
  height: 100px;
  object-fit: contain;
  margin-bottom: 10px;
  z-index: 2;
  display: block;
}

/* Text */
.wrapper-text-card-stp {
  text-align: center;
}

.stp-grid-product-card span {
  color: #fff;
  font-weight: bold;
  font-size: 1rem;
  z-index: 2;
  text-shadow: 1px 1px 4px #b71c1c;
}

/* Desktop */
@media (min-width: 749px) {
  .stp-grid-products-grid {
    grid-template-columns: repeat(3, 1fr);
    grid-gap: 24px;
  }

  /* Full-width spans all 3 columns */
  .stp-grid-product-card {
    flex-direction: row;
    gap: 16px;
    min-height: 180px;
  }

  .stp-grid-product-card img {
    height: 200px;
    object-fit:contain;
    width: 100%;
  }

  .wrapper-text-card-stp {
    flex: 1;
    text-align: left;
    display: flex;
    align-items: center;
    padding-left: 10px;
  }

  .stp-grid-product-card span {
    font-size: 1.2rem;
  }
}

</style>


