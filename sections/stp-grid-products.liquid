          },
          {
            "type": "card",
            "settings": {
              "title": "CREATINAS"
            }
          },
          {
            "type": "card",
            "settings": {
              "title": "ENERGÉTICOS Y PRE-ENTRENOS"
            }
          },
          {
            "type": "card",
            "settings": {
              "title": "VASODILATADORES"
            }
          }, {
            "type": "card",
            "settings": {
              "title": "AMINOÁCIDOS Y RECUPERACIÓN"
            }
          }, {
            "type": "card",
            "settings": {
              "title": "QUEMA GRASA Y METABOLISMO",
              "full_width": true
            }
          }
        ]
      }
    ]
  }
{% endschema %}