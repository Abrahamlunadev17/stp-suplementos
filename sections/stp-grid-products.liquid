
<h2>
  NUESTROS PRODUCTOS
</h2>

<div class="stp-grid-products-section">
  <div class="stp-grid-products-grid">
    {% for block in section.blocks %}
      <div class="stp-grid-product-card
      {% if forloop.first %} stp-grid-product-card--first{% endif %}
      {% if forloop.last %} stp-grid-product-card--last{% endif %}
    ">
        {% if block.settings.image != blank %}
          <div class="image-container-stp">
            <img src="{{ block.settings.image | img_url: 'medium' }}" alt="{{ block.settings.title | escape }}">
          </div>
        {% endif %}
        <div class="wrapper-text-card-stp">
          <span>{{ block.settings.title }}</span>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

<style>


  /* --- Grid Products Section Styles --- */
  .stp-grid-products-section {
    max-width: 1400px;
    margin: 0 auto;
    padding: 20px 16px;
  }

  .stp-grid-product-card--first img,
  .stp-grid-product-card--last img {
    position: absolute;
    right: 25%;
    top: 25%;
    height: 200px !important;
  }

  .stp-grid-products-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    grid-template-rows: repeat(8, 1fr);
    grid-column-gap: 24px;
    grid-row-gap: 16px;
    position: relative;
    padding-bottom: 54px;
  }


  .stp-grid-products-grid .stp-grid-product-card:nth-child(1) {
    grid-area: 1 / 1 / 3 / 3;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    position: relative;
  }
  .stp-grid-products-grid .stp-grid-product-card:nth-child(2) {
    grid-area: 3 / 1 / 5 / 2;
  }
  .stp-grid-products-grid .stp-grid-product-card:nth-child(3) {
    grid-area: 3 / 2 / 5 / 3;
  }
  .stp-grid-products-grid .stp-grid-product-card:nth-child(4) {
    grid-area: 5 / 1 / 7 / 2;
  }
  .stp-grid-products-grid .stp-grid-product-card:nth-child(5) {
    grid-area: 5 / 2 / 7 / 3;
  }
  .stp-grid-products-grid .stp-grid-product-card:nth-child(6) {
    grid-area: 7 / 1 / 9 / 3;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    position: relative;
  }


  .stp-grid-product-card {
    background: #e53935;
    border-radius: 10px;
    padding: 18px 16px 16px;
    display: flex;
    flex-direction: column;
    align-items: center;
    max-height: 200px;
    position: relative;
    justify-content: center;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.12);
  }
  .stp-grid-product-card img {
    width: 100%;
    height: 100px;
    object-fit: contain;
    margin-bottom: 10px;
    z-index: 2;
    display: block;
  }
  .wrapper-text-card-stp {
    text-align: center;
  }
  .stp-grid-product-card span {
    color: #fff;
    font-weight: bold;
    font-size: 1.1rem;
    z-index: 2;
    text-shadow: 1px 1px 4px #b71c1c;
  }
  @media (min-width: 749px) {

    .stp-grid-products-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      grid-template-rows: auto
    }

    .stp-grid-products-grid .stp-grid-product-card:nth-child(1),
    .stp-grid-products-grid .stp-grid-product-card:nth-child(2),
    .stp-grid-products-grid .stp-grid-product-card:nth-child(1) .stp-grid-products-grid .stp-grid-product-card:nth-child(1) .stp-grid-products-grid .stp-grid-product-card:nth-child(1),
    .stp-grid-products-grid .stp-grid-product-card:nth-child(2),
    .stp-grid-products-grid .stp-grid-product-card:nth-child(3),
    .stp-grid-products-grid .stp-grid-product-card:nth-child(4),
    .stp-grid-products-grid .stp-grid-product-card:nth-child(5),
    .stp-grid-products-grid .stp-grid-product-card:nth-child(6) {
      grid-area: initial;
    }

    .stp-grid-product-card--last {
      display: flex;
      flex-direction: column;
    },

    .stp-grid-products-grid .stp-grid-product-card:nth-child(6) {
      grid-area: initial;
      display: flex;
      flex-direction: column;
      position: initial;
    }

    .stp-grid-product-card--first {
      display: flex;
      flex-direction: column;
    }
    .stp-grid-products-grid .stp-grid-product-card:nth-child(1),
    .stp-grid-products-grid .stp-grid-product-card:nth-child(6) {
      grid-template-columns: repeat(2, 1fr);
    }

    .stp-grid-product-card--first img,
    .stp-grid-product-card--last img {
      position: static;
    }

    .stp-grid-product-card {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      max-height: 100%;
    }

    .stp-grid-product-card img {
      height: 200px;
    }


  }


</style>


{% schema %}
  {
    "name": "Grid de Productos",
    "settings": [],
    "blocks": [
      {
        "type": "card",
        "name": "Card",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Imagen"
          }, {
            "type": "text",
            "id": "title",
            "label": "Título"
          }, {
            "type": "checkbox",
            "id": "full_width",
            "label": "¿Card de ancho completo?",
            "default": false
          }
        ]
      }
    ],
    "max_blocks": 7,
    "presets": [
      {
        "name": "Grid de Productos",
        "blocks": [
          {
            "type": "card",
            "settings": {
              "title": "PROTEÍNAS",
              "full_width": true
