            "default": "Juan López"
          },
          {
            "type": "image_picker",
            "id": "product_img",
            "label": "Imagen del producto"
          }, {
            "type": "text",
            "id": "product_title",
            "label": "Nombre del producto",
            "default": "Whey Protein Powder"
          }, {
            "type": "url",
            "id": "product_url",
            "label": "Enlace del producto"
          }
        ]
      }
    ],
    "max_blocks": 10,
    "presets": [
      {
        "name": "Slider de Reseñas",
        "blocks": [
          {
            "type": "review"
          }, {
            "type": "review"
          }, {
            "type": "review"
          }, {
            "type": "review"
          }
        ]
      }
    ]
  }
