

<div class="define-section">
  <h2 class="define-title">
    {{ section.settings.title }}</h2>

  <div class="swiper define-swiper">
    <div class="swiper-wrapper">

      {% for block in section.blocks %}
        <div class="swiper-slide define-slide">
          <div class="define-card">
            <div class="define-icon">
              {{ block.settings.icon | image_url: width: 64 | image_tag: class: 'define-icon-img' }}
            </div>
            <div>
              <h3 class="define-card-title">{{ block.settings.title }}</h3>
              <p class="define-card-text">{{ block.settings.text }}</p>
            </div>
          </div>
        </div>
      {% endfor %}

    </div>

    <!-- Pagination -->
    <div class="define-pagination"></div>
  </div>
</div>


<script>
  document.addEventListener('DOMContentLoaded', function () {
    new Swiper('.define-swiper', {
      slidesPerView: 1.1,
      spaceBetween: 16,
      pagination: {
        el: '.define-pagination',
        clickable: true,
      },
      breakpoints: {
        750: {
          slidesPerView: 3,
          spaceBetween: 24,
        }
      }
    });
  });
</script>


<style>
  .define-section {
    padding: 40px 20px;
    text-align: center;
    color: white;
  }

  .define-title {
    font-size: 26px;
    font-weight: bold;
    text-transform: uppercase;
    margin-bottom: 30px;
  }

  .define-card {
    display: grid;
    grid-template-columns: 74px 1fr;
    background-color: #ffffff;
    color: black;
    border-radius: 12px;
    padding: 24px 8px;
    text-align: left;
    max-width: 320px;
    margin: auto;
    height: 100%;
  }

  .define-icon {
    margin-bottom: 12px;
  }

  .define-icon-img {
    width: 64px;
    height: auto;
  }

  .define-card-title {
    font-weight: bold;
    text-transform: uppercase;
    font-size: 16px;
    margin-bottom: 8px;
  }

  .define-card-text {
    font-size: 14px;
    line-height: 1.4;
  }

  .define-card-footnote {
    font-size: 11px;
    color: #666666;
    margin-top: 10px;
    font-style: italic;
  }

  .define-swiper {
    width: 100%;
    padding-bottom: 30px;
  }

  .define-pagination {
    margin-top: 24px;
    text-align: center;
  }

  .define-swiper .swiper-pagination-bullet {
    display: inline-block;
    width: 32px;
    height: 6px;
    background: #bbb;
    opacity: 1;
    margin: 0 4px !important;
    border-radius: 0;
    transition: background 0.3s ease;
  }

  .define-swiper .swiper-pagination-bullet-active {
    background: #cf2928;
  }
  @media screen and (min-width: 750px) {
    .define-swiper .swiper-wrapper {
      display: flex;
      justify-content: center;
    }

    .define-card {
      width: 100%;
      max-width: 100%;
    }

    .define-swiper .swiper-slide {
      width: auto !important;
    }

    .define-swiper .define-slide {
      max-width: 360px;
    }
  }
</style>


