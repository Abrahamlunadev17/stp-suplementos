<div class="hero-image-wrapper">
  {% if section.settings.image_desktop %}
    {{ section.settings.image_desktop
 | image_url: width: 2200
 | image_tag: 
 loading: 'eager',
 class: 'hero-media desktop-only',
 widths: '1200,1600,1900,2200' }}
  {% endif %}

  {% if section.settings.image_mobile %}
    {{ section.settings.image_mobile
 | image_url: width: 1000
 | image_tag: 
 loading: 'eager',
 class: 'hero-media mobile-only',
 widths: '400,600,800,1000' }}
  {% endif %}
</div>

<style>
  .hero-image-wrapper {
    position: relative;
    width: 100%;
  }

  .hero-media {
    width: 100%;
    display: block;
  }

  .desktop-only {
    display: block;
  }

  .mobile-only {
    display: none;
  }

  @media screen and (max-width: 749px) {
    .desktop-only {
      display: none;
    }
    .mobile-only {
      display: block;
    }
  }

</style>


{% schema %}
  {
    "name": "Hero Image Responsive",
    "settings": [
      {
        "type": "image_picker",
        "id": "image_desktop",
        "label": "Imagen para desktop"
      }, {
        "type": "image_picker",
        "id": "image_mobile",
        "label": "Imagen para mobile"
      }
    ],
    "presets": [
      {
        "name": "Hero Responsive conocenos",
        "category": "Image"
      }
    ]
  }
{% endschema %}